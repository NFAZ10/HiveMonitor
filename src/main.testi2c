#include <Wire.h>
#include <Arduino.h>
void setup() {
    Serial.begin(9600);
    Wire.begin(21, 22);
}

void loop() {
    
    Serial.println("Scanning for I2C devices...");
    for (byte address = 1; address < 127; address++) {
        Wire.beginTransmission(address);
        if (Wire.endTransmission() == 0) {
            Serial.print("Found device at 0x");
            Serial.println(address, HEX);
        }
    }
    
delay(1000);
}
